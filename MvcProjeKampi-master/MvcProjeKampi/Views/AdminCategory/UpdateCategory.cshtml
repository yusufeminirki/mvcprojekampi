@using EntityLayer.Concrete
@model Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Kategori Güncelleme Sayfası</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/AdminCategory/Index">Kategori Listesi</a></li>
                            <li class="breadcrumb-item active">Kategori Güncelleme Sayfası</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Kategori Ekleme Formu</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">
                        <div class="card-body">
                            @Html.HiddenFor(x => x.CategoryID)
                            <div class="form-group">
                                <label for="">Kategori Adı</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CategoryName)
                            </div>
                            <div class="form-group">
                                <label for="">Kategori Açıklaması</label>
                                @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CategoryDescription)
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label for="">Aktif / Pasif</label>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-primary col-md-12">Kategoriyi Güncelle!</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
