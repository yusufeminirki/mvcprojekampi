@model EntityLayer.Concrete.Writer

@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Yazar Güncelleme Sayfası</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/Writer/Index">Yazar Listesi</a></li>
                            <li class="breadcrumb-item active">Yazar Güncelleme Sayfası</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Yazar Güncelleme Formu</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.WriterID)
                                <label for="">İsim Soyisim</label>
                                <div class="row">
                                    @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control col-6" })
                                    @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control col-6" })

                                    @Html.ValidationMessageFor(x => x.WriterName)
                                    @Html.ValidationMessageFor(x => x.WriterSurname)
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="">Unvan</label>
                                @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterTitle)
                            </div>
                            <div class="form-group">
                                <label for="">Hakkında</label>
                                @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterAbout)
                            </div>
                            <div class="form-group">
                                <label for="">E-Posta</label>
                                @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterMail)
                            </div>
                            <div class="form-group">
                                <label for="">Şifre</label>
                                @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterPassword)
                            </div>
                            <div class="form-group">
                                <label for="">Yazar Görsel</label>
                                @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterImage)
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-primary col-md-12">Yazarı Güncelle!</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>