@using EntityLayer.Concrete
@model Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Yeni Başlık Ekleme Sayfası</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/Heading/Index">Başlık Listesi</a></li>
                            <li class="breadcrumb-item active">Yeni Başlık Ekleme Sayfası</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Başlık Ekleme Formu</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="">Başlık Adı</label>
                                <input type="text" class="form-control" placeholder="Başlık adını giriniz." name="HeadingName" required>
                                @Html.ValidationMessageFor(x => x.HeadingName)
                            </div>
                            <div class="form-group">
                                <label for="">Kategori</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.VLC, "Kategori seçiniz.", new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(x => x.CategoryID)
                            </div>
                            <div class="form-group">
                                <label for="">Yazar</label>
                                @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.VLW, "Yazar seçiniz.", new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(x => x.WriterID)
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-primary col-md-12">Yeni Başlık Ekle!</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

