@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Başlık Güncelleme Sayfası</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/WriterPanel/AllHeading">Başlık Listesi</a></li>
                            <li class="breadcrumb-item active">Başlık Güncelleme Sayfası</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Başlık Güncelleme Formu</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">
                        <div class="card-body">
                            @Html.HiddenFor(x => x.HeadingID)
                            @Html.HiddenFor(x => x.WriterID)
                            <div class="form-group">
                                <label for="">Başlık Adı</label>
                                @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.HeadingName)
                            </div>
                            <div class="form-group">
                                <label for="">Kategori</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.VLC, "Kategori seçiniz.", new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-primary col-md-12">Başlığı Güncelle!</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

